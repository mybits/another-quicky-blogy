<% @post.comments.each do |comment| %>
	<em><p>Posted <%= time_ago_in_words(comment.created_at) %> ago </p></em>
	<p>By: <%= comment.author %></p>
	<div class="comment">
		<%= comment.body %>
	</div>
	<p><%= button_to "Delete", [@post, comment],
	data: { confirm: "Are you sure?" }, method: :delete %></p>
<% end %>
