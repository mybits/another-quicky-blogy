<h1>My Blog!</h1>
<% @posts.each do |post| %>
	<h2><%= link_to post.title, post %></h2>
	<em><p>Created at: <%= time_tag(post.created_at) %></p></em>
	<div class="entry">
		<%= post.body %>
		<p><%= link_to "Edit", [:edit, post] %></p>
		<%= button_to "Delete", post, 
			data: { confirm: "Are you sure?" }, method: :delete %>
		<hr/>
	</div>
<% end %>

<%= link_to "New Post", new_post_path %>